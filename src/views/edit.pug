extends base.pug

block content
    h4 Change Title of video
    form(method="POST")
        input(name="title",  placeholder = "Video Title" , value =`${video.title}` ,  required , maxlength=80)
        input(name="description",  placeholder = "Video Title" , value =`${video.description}` ,  required , minlength=20)
        input(name="hashtags",  placeholder = "Video Title" , value =`${video.hashtags.join()}` ,  required)
        input(value="save" , type="submit")