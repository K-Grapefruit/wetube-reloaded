extends base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="POST",enctype="multipart/form-data")
        lable(for="video") Video File
        input( type ="file" , accept="video/*" , required , id="video", name="video")
        input( type ="text",placeholder="title" , required , name="title" , maxlength=80)
        input( type ="text",placeholder="Description" , required , name="description",maxlength=80)
        input( type ="text",placeholder="Hashtag, separated by coma" , required , name="hashtags")

        input(type="submit" , value="Upload Video")